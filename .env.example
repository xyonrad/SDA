# SDA (Sentinel Deforestation Analysis) â€” example env
# Copy to .env and fill values (CLI can generate .env for you)

# Profile (user|dev). Usually CLI decides this; keep as default.
SDA_PROFILE=user

# Paths
SDA_DATA_DIR=./sda/data/data
SDA_CACHE_DIR=./sda/data/cache
SDA_LOG_LEVEL=INFO

# PostgreSQL (readable split fields)
PG_HOST=localhost
PG_PORT=5432
PG_DB=sda
PG_USER=sda
PG_PASS=change_me

# Local auth (v0): stored in .env (later migrate to DB)
SDA_USER_LOGIN=admin
SDA_USER_PASS=change_me

# API key (v0): long-lived token for localhost + CLI ops
# Generated by CLI; keep secret.
SDA_LH_KEY=

# Copernicus (optional; only if you still use CDSE downloads)
CDSE_USER=
CDSE_PASS=
CDSE_AUTH_TOKEN=

